@model Category
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<form method="post">
    <div class="border p-3 mt-4 ">
        <h2>Edit Category</h2>
        <hr />
    </div>
    <div class="mb-3">
        <label>Name</label>
        <input asp-for="Name" type="text" class="form-control" />
    </div>
    <div class="row">
        <div class="col-6">
            <button type="submit" class="btn btn-primary form-control">Update</button>
        </div>
        <div class="col-6">
            <a asp-controller="Category" asp-action="Index" class="btn btn-primary form-control">
                Back to List
            </a>
        </div>
    </div>


</form>