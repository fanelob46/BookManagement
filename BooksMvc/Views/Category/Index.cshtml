@model List<Category>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                 Categories List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-file-plus"></i>  Creat new Category
            </a>
        </div>
    </div>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th> Category Name</th>
        <th></th>
    </tr>
    </thead>
    <tbody>  
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.Name</td>
                <td>
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                    </a>
                </td>
                    <td>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3"></i> Delete
                        </a>
                    </td>
        </tr>
        }
    </tbody>
</table>
</div>

